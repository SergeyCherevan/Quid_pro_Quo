<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAddedPhotoCreateTicket"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCreateTicketNewPhoto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/landscape"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/textViewCreateTicketPhotoResolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="170dp"
                    android:maxHeight="48dp"
                    android:text="Name"
                    android:textColor="@color/buttonPassive"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:background="@color/loginLableColor"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/textViewCreateTicketPhotoSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="170dp"
                    android:maxHeight="28dp"
                    android:text="Size"
                    android:textColor="@color/buttonPassive"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:background="@color/loginLableColor"
                    android:layout_marginTop="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearContainerButtonClearPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/imageButtonCreateTicketClearPhoto"
                    android:layout_width="60dp"
                    android:layout_height="76dp"
                    android:drawableLeft="@drawable/ic_baseline_clear_24"
                    android:layout_marginTop="-10dp"
                    android:contentDescription="clearmap"
                    android:backgroundTint="@color/buttonRedFilters" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>