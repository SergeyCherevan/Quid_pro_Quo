<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateTicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/loginLableColor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="485dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTicketTitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="170dp"
                            android:maxHeight="48dp"
                            android:text="Title"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@color/loginLableColor"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardGeolocationFilterPreInfo1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="top|start|end"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <EditText
                                android:id="@+id/editTextCreateTicketTitle"
                                style="@style/inputTextStyleTicketCreateTitle"
                                android:inputType="textShortMessage"
                                android:hint="Write title" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTicketTitle12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="170dp"
                            android:maxHeight="48dp"
                            android:text="Description"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@color/loginLableColor"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardGeolocationFilterPreInfo12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|start|end"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <EditText
                                android:id="@+id/editTextCreateTicketDescription"
                                style="@style/inputTextStyleTicketCreateDescription"
                                android:hint="Text for description" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTicketTitle25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="170dp"
                            android:maxHeight="48dp"
                            android:text="Photos"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@color/loginLableColor"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardCreateTicketAddPhotoPreInfo"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="top|start|end"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_gravity="start|top|bottom"
                                android:layout_marginTop="-5dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">


                                <ImageView
                                    android:id="@+id/imageViewDateFilterPreInfo3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_picture_second"
                                    android:padding="15dp"/>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginStart="111dp"
                                android:paddingTop="18dp">

                                <TextView
                                    android:id="@+id/textViewDateText2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="170dp"
                                    android:maxHeight="48dp"
                                    android:text="Tap to add new photo"
                                    android:textColor="@color/buttonPassive"
                                    android:textAlignment="textStart"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:background="@color/loginLableColor"
                                    android:layout_marginTop="0dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="end"
                                android:layout_marginEnd="0dp">

                                <Button
                                    android:id="@+id/imageButtonCreateTicketAddPhoto"
                                    android:layout_width="60dp"
                                    android:layout_height="80dp"
                                    app:srcCompat="@drawable/ic_add_second"
                                    android:drawableLeft="@drawable/ic_baseline_plus_first"
                                    android:layout_marginTop="-10dp"
                                    android:contentDescription="clearmap"
                                    android:backgroundTint="#4CAF50"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/listNewPhotos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start|top|end">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTicketTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="170dp"
                            android:maxHeight="48dp"
                            android:text="Geolocation"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@color/loginLableColor"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutGeolocationCreateTicketPreInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardGeolocationCreateTicketPreInfo"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="top|start|end"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/buttonSelectGeolocationCreateTicket"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    app:srcCompat="@drawable/ic_add_second"
                                    android:layout_marginBottom="-8dp"
                                    android:contentDescription="clearmap"
                                    android:backgroundTint="#4CAF50"
                                    android:layout_gravity="bottom"
                                    android:text="Select geolocation" />

                                <fragment
                                    android:id="@+id/mapPreViewCreateTickets"
                                    android:name="com.google.android.gms.maps.SupportMapFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </fragment>

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewTicketTitle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxWidth="170dp"
                            android:maxHeight="48dp"
                            android:text="Date"
                            android:textAlignment="textStart"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@color/loginLableColor"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardDateCreateTicketPreInfo"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="top|start|end"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_gravity="start|top|bottom"
                                android:layout_marginTop="-5dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="6dp">


                                <ImageView
                                    android:id="@+id/imageViewDateFilterPreInfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_calendar_first"
                                    android:padding="15dp"/>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginStart="111dp"
                                android:paddingTop="18dp">

                                <TextView
                                    android:id="@+id/textViewDateText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxWidth="170dp"
                                    android:maxHeight="48dp"
                                    android:text="Tap to add new date"
                                    android:textColor="@color/buttonPassive"
                                    android:textAlignment="textStart"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:background="@color/loginLableColor"
                                    android:layout_marginTop="0dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_gravity="end"
                                android:layout_marginEnd="0dp">

                                <Button
                                    android:id="@+id/imageButtonAddNewDate"
                                    android:layout_width="60dp"
                                    android:layout_height="80dp"
                                    app:srcCompat="@drawable/ic_add_second"
                                    android:drawableLeft="@drawable/ic_baseline_plus_first"
                                    android:layout_marginTop="-10dp"
                                    android:contentDescription="clearmap"
                                    android:backgroundTint="#4CAF50"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/listNewDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp"
                        android:layout_gravity="start|top">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/buttonSendRequestPublishTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/main_project_color_two"
            android:text="@string/buttonCreateNewTicket"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

    </LinearLayout>

</FrameLayout>