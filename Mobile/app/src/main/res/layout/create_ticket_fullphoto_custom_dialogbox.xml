<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <ImageView
            android:id="@+id/imageViewFullPhotoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_location_first"
            android:layout_marginTop="0dp"
            android:scaleType="centerInside"
            android:contentDescription="Full Photo" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginEnd="0dp">

            <Button
                android:id="@+id/imageButtonCloseFullPhotoView"
                android:layout_width="120dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_add_second"
                android:drawableRight="@drawable/ic_check_first"
                android:text="Close"
                android:layout_marginTop="-10dp"
                android:contentDescription="clearmap"
                android:backgroundTint="#4CAF50"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>