<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quidpro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_project_color_two</item>
        <item name="colorPrimaryVariant">@color/main_project_color_two</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_project_color_one</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="inputTextStyleFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/loginLableColor</item>
        <item name="android:textColorHint">@color/main_project_color_two</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/custom_input_login_reg</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="textViewFirstStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/loginLableColor</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="textViewSecondStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/loginLableColor</item>
    </style>

    <style name="textViewThirdStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/loginLableColor</item>
    </style>

    <style name="viewSplit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@color/main_project_color_one</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="buttonStyleFirst">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/loginLableColor</item>
        <item name="android:backgroundTint">@color/main_project_color_two</item>
    </style>

    <style name="inputTextStyleTicketCreateTitle">
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">7</item>
        <item name="android:maxLength">1000</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_project_color_two</item>
        <item name="android:textColorHint">@color/buttonPassive</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/custom_input_create_ticket_title</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">22dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="inputTextStyleTicketCreateDescription">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">7</item>
        <item name="android:maxLength">1000</item>
        <item name="android:gravity">top|start</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:minHeight">170dp</item>
        <item name="android:textColor">@color/main_project_color_two</item>
        <item name="android:textColorHint">@color/buttonPassive</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/custom_input_create_ticket_title</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">22dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="DateTimePickerDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:colorAccent">@color/buttonRedFilters</item>
        <item name="android:datePickerStyle">@style/DatePickerDialogStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
    </style>

    <style name="DatePickerDialogStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">#A500FF</item>
        <item name="android:background">@drawable/custom_datepicker_backgroud</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">#A500FF</item>
        <item name="android:background">@drawable/custom_datepicker_backgroud</item>
    </style>

</resources>